{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react",
        "lib": [
            "ESNext",
            "dom",
            "dom.iterable"
        ],
        "useDefineForClassFields": true,
        "emitDecoratorMetadata": false,
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node",
            "react",
            "react-dom"
        ],
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

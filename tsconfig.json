{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ESNext",
            "dom"
        ],
        "useDefineForClassFields": true,
        "emitDecoratorMetadata": false,
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node"
        ],
        "allowJs": false,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
